---
import BaseLayout from '../layouts/BaseLayout.astro';
import Icon from '../components/Icon.astro';
---

<BaseLayout title="Documentation | PizzaWorld+" description="Complete technical documentation for PizzaWorld+ platform">
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<header class="hero">
				<div class="hero-content">
					<h1 class="hero-title">
						<span class="text-gradient">Documentation</span>
					</h1>
					<p class="hero-tagline">
						Technical documentation, API references, and implementation guides
					</p>
				</div>
			</header>

			<div class="documentation-container">
				<aside class="sidebar">
					<div class="sidebar-header">
						<h3>Table of Contents</h3>
					</div>
					<nav class="sidebar-nav">
						<ul class="nav-section">
							<li class="nav-item">
								<a href="#getting-started" class="nav-link">
									<Icon icon="rocket-launch" size="1rem" />
									Getting Started
								</a>
							</li>
							<li class="nav-item">
								<a href="#api-reference" class="nav-link">
									<Icon icon="code" size="1rem" />
									API Reference
								</a>
							</li>
							<li class="nav-item">
								<a href="#authentication" class="nav-link">
									<Icon icon="strategy" size="1rem" />
									Authentication
								</a>
							</li>
							<li class="nav-item">
								<a href="#database" class="nav-link">
									<Icon icon="terminal-window" size="1rem" />
									Database Schema
								</a>
							</li>
							<li class="nav-item">
								<a href="#deployment" class="nav-link">
									<Icon icon="paper-plane-tilt" size="1rem" />
									Deployment
								</a>
							</li>
							<li class="nav-item">
								<a href="#examples" class="nav-link">
									<Icon icon="book" size="1rem" />
									Examples
								</a>
							</li>
						</ul>
					</nav>
					

				</aside>

				<div class="content-area">
					<div class="content-header">
						<div class="status-badge">
							<Icon icon="pencil-line" size="0.875rem" />
							<span>Under Construction</span>
						</div>
						<h2>Documentation Content</h2>
						<p>This section will contain technical documentation generated from LaTeX source.</p>
					</div>

					<div class="content-placeholder">
						<div class="placeholder-content">
							<div class="placeholder-icon">
								<Icon icon="book" size="4rem" />
							</div>
							<h3>Documentation Content</h3>
							<p>This area is reserved for technical documentation that will be generated from LaTeX source files.</p>
							<div class="placeholder-features">
								<div class="feature-item">
									<Icon icon="code" size="1.2rem" />
									<span>API Documentation</span>
								</div>
								<div class="feature-item">
									<Icon icon="terminal-window" size="1.2rem" />
									<span>Database Schema</span>
								</div>
								<div class="feature-item">
									<Icon icon="strategy" size="1.2rem" />
									<span>Security & Authentication</span>
								</div>
								<div class="feature-item">
									<Icon icon="paper-plane-tilt" size="1.2rem" />
									<span>Deployment Guide</span>
								</div>
								<div class="feature-item">
									<Icon icon="book" size="1.2rem" />
									<span>Code Examples</span>
								</div>
								<div class="feature-item">
									<Icon icon="trophy" size="1.2rem" />
									<span>Implementation Guide</span>
								</div>
							</div>
						</div>
					</div>

					<div class="quick-links">
						<h3>Quick Links</h3>
						<div class="quick-links-grid">
							<a href="https://github.com/luigids03/PizzaWorld/" class="quick-link" target="_blank" rel="noopener noreferrer">
								<Icon icon="github-logo" size="1.5rem" />
								<div>
									<span class="link-title">GitHub Repository</span>
									<span class="link-description">View source code and contribute</span>
								</div>
							</a>
							<a href="https://dashboard.pizzaworldplus.tech" class="quick-link" target="_blank" rel="noopener noreferrer">
								<Icon icon="monitor" size="1.5rem" />
								<div>
									<span class="link-title">Live Dashboard</span>
									<span class="link-description">Access the live platform</span>
								</div>
							</a>
							<a href="/blog" class="quick-link">
								<Icon icon="paper-plane-tilt" size="1.5rem" />
								<div>
									<span class="link-title">Development Blog</span>
									<span class="link-description">Latest updates and insights</span>
								</div>
							</a>
							<a href="mailto:pizzaworldplus@gmail.com" class="quick-link">
								<Icon icon="mail" size="1.5rem" />
								<div>
									<span class="link-title">Technical Support</span>
									<span class="link-description">Get help with implementation</span>
								</div>
							</a>
						</div>
					</div>
				</div>
			</div>
		</main>
	</div>
</BaseLayout>

<style>
	.hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
		padding: 4rem 0;
		text-align: center;
	}

	.hero-content {
		max-width: 50rem;
	}

	.hero-title {
		font-size: var(--text-5xl);
		font-weight: 900;
		line-height: 1.1;
		color: var(--gray-0);
		margin-bottom: 1rem;
	}

	.hero-tagline {
		font-size: var(--text-xl);
		color: var(--gray-300);
		line-height: 1.4;
	}

	.text-gradient {
		background: var(--gradient-accent);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.documentation-container {
		display: grid;
		grid-template-columns: 280px 1fr;
		gap: 3rem;
		align-items: start;
	}

	.sidebar {
		position: sticky;
		top: 2rem;
		background: var(--gray-999);
		border-radius: 1rem;
		border: 1px solid var(--gray-800);
		padding: 2rem;
		height: fit-content;
	}

	.sidebar-header {
		margin-bottom: 2rem;
		padding-bottom: 1rem;
		border-bottom: 1px solid var(--gray-800);
	}

	.sidebar-header h3 {
		font-size: var(--text-lg);
		font-weight: 600;
		color: var(--gray-0);
		margin: 0;
	}

	.sidebar-nav {
		margin-bottom: 2rem;
	}

	.nav-section {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.nav-item {
		margin-bottom: 0.5rem;
	}

	.nav-link {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.75rem 1rem;
		color: var(--gray-300);
		text-decoration: none;
		border-radius: 0.5rem;
		transition: all 0.3s ease;
		font-size: var(--text-sm);
	}

	.nav-link:hover {
		background: var(--gray-800);
		color: var(--gray-0);
		transform: translateX(4px);
	}

	.nav-link svg {
		color: var(--accent-regular);
	}



	.content-area {
		background: var(--gray-999);
		border-radius: 1rem;
		border: 1px solid var(--gray-800);
		overflow: hidden;
	}

	.content-header {
		padding: 2rem;
		border-bottom: 1px solid var(--gray-800);
	}

	.status-badge {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		background: var(--accent-subtle);
		color: var(--accent-text-over);
		padding: 0.5rem 1rem;
		border-radius: 999rem;
		font-size: var(--text-xs);
		font-weight: 600;
		margin-bottom: 1rem;
	}

	.content-header h2 {
		font-size: var(--text-2xl);
		font-weight: 700;
		color: var(--gray-0);
		margin-bottom: 0.5rem;
	}

	.content-header p {
		color: var(--gray-300);
		line-height: 1.6;
	}

	.content-placeholder {
		padding: 4rem 2rem;
		text-align: center;
		background: var(--gray-800);
		margin: 2rem;
		border-radius: 0.75rem;
		border: 2px dashed var(--gray-700);
	}

	.placeholder-content {
		max-width: 600px;
		margin: 0 auto;
	}

	.placeholder-icon {
		margin-bottom: 2rem;
		color: var(--accent-regular);
	}

	.placeholder-content h3 {
		font-size: var(--text-xl);
		font-weight: 600;
		color: var(--gray-0);
		margin-bottom: 1rem;
	}

	.placeholder-content p {
		color: var(--gray-300);
		line-height: 1.6;
		margin-bottom: 3rem;
	}

	.placeholder-features {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
		text-align: left;
	}

	.feature-item {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1rem;
		background: var(--gray-900);
		border-radius: 0.5rem;
		border: 1px solid var(--gray-700);
	}

	.feature-item svg {
		color: var(--accent-regular);
	}

	.feature-item span {
		color: var(--gray-200);
		font-size: var(--text-sm);
		font-weight: 500;
	}

	.quick-links {
		padding: 2rem;
		border-top: 1px solid var(--gray-800);
	}

	.quick-links h3 {
		font-size: var(--text-lg);
		font-weight: 600;
		color: var(--gray-0);
		margin-bottom: 1.5rem;
	}

	.quick-links-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
	}

	.quick-link {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1.5rem;
		background: var(--gray-800);
		border-radius: 0.75rem;
		border: 1px solid var(--gray-700);
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.quick-link:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
		border-color: var(--accent-regular);
	}

	.quick-link svg {
		color: var(--accent-regular);
	}

	.link-title {
		display: block;
		font-size: var(--text-sm);
		font-weight: 600;
		color: var(--gray-0);
		margin-bottom: 0.25rem;
	}

	.link-description {
		display: block;
		font-size: var(--text-xs);
		color: var(--gray-400);
	}

	@media (max-width: 50em) {
		.documentation-container {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.sidebar {
			position: static;
			order: 2;
		}

		.content-area {
			order: 1;
		}

		.hero-title {
			font-size: var(--text-3xl);
		}

		.hero-tagline {
			font-size: var(--text-lg);
		}

		.placeholder-features {
			grid-template-columns: 1fr;
		}

		.quick-links-grid {
			grid-template-columns: 1fr;
		}
	}

	@media (max-width: 40em) {
		.content-placeholder {
			padding: 2rem 1rem;
			margin: 1rem;
		}

		.placeholder-features {
			text-align: center;
		}
	}
</style> 