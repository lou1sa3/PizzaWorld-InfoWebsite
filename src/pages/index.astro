---
// Layout import — provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';

// Component Imports
import CallToAction from '../components/CallToAction.astro';
import Hero from '../components/Hero.astro';
import Pill from '../components/Pill.astro';
import Icon from '../components/Icon.astro';

// Page section components
import ContactCTA from '../components/ContactCTA.astro';
---

<BaseLayout 
	title="PizzaWorld+ | Enterprise Analytics Platform"
	description="Enterprise-grade business intelligence and analytics platform for multi-location pizza chains. Real-time insights, performance monitoring, and data-driven decision making."
>
	<div class="onepage">
		<!-- Hero Section -->
		<section id="home" class="hero-section">
			<div class="wrapper">
				<div class="hero-content">
					<header class="hero" style="align-items: center;">
						<img
							alt="PizzaWorld+ Logo"
							src="/assets/logo.png"
							style="max-width: 200px; height: auto; background: transparent; border-radius: 1rem; padding: 1rem;"
						/>
						<h1 class="text-6xl font-extrabold tracking-tight text-center" style="font-family: var(--font-brand); margin-top: 1.5rem;">
							PizzaWorld<span style="color: var(--accent-regular);">+</span>
						</h1>
					</header>
					<p class="hero-tagline">
						Enterprise-grade business intelligence and analytics platform for multi-location pizza chains. 
						Real-time insights, performance monitoring, and data-driven decision making—built for scale.
					</p>
					<div class="hero-badges">
						<Pill>Full-Stack Platform</Pill>
						<Pill>Real-Time Analytics</Pill>
						<Pill>Enterprise Grade</Pill>
					</div>
					
					<!-- Three Action Boxes -->
					<div class="action-boxes">
						<div class="action-box">
							<div class="action-icon">
								<Icon icon="github-logo" size="2.5rem" />
							</div>
							<h3>GitHub Repository</h3>
							<p>Access the source code and contribute to the project</p>
							<div class="action-links">
								<a href="https://github.com/luigids03/PizzaWorld/" class="action-link primary" target="_blank" rel="noopener noreferrer">
									<Icon icon="github-logo" size="1.2rem" />
									View Project
								</a>
								<a href="https://github.com/luigids03/PizzaWorld/releases" class="action-link secondary" target="_blank" rel="noopener noreferrer">
									<Icon icon="download" size="1.2rem" />
									Download
								</a>
							</div>
						</div>

						<div class="action-box featured">
							<div class="action-icon">
								<Icon icon="monitor" size="2.5rem" />
							</div>
							<h3>Dashboard Access</h3>
							<p>Access the live dashboard for real-time analytics</p>
							<div class="action-links">
								<a href="https://dashboard.pizzaworldplus.tech" class="action-link primary" target="_blank" rel="noopener noreferrer">
									<Icon icon="monitor" size="1.2rem" />
									Open Dashboard
								</a>
							</div>
						</div>

						<div class="action-box">
							<div class="action-icon">
								<Icon icon="book" size="2.5rem" />
							</div>
							<h3>Documentation</h3>
							<p>Complete guides and API documentation</p>
							<div class="action-links">
								<a href="/documentation" class="action-link primary">
									<Icon icon="book" size="1.2rem" />
									Read Docs
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- About Section -->
		<section id="about" class="about-section section with-background">
			<div class="wrapper">
				<header class="section-header">
					<h2>About PizzaWorld<span style="color: var(--accent-regular);">+</span></h2>
					<p>A sophisticated, full-stack business intelligence and analytics platform designed for multi-location pizza chains.</p>
				</header>
				
				<div class="about-content">
					<div class="about-text">
						<p>
							PizzaWorld+ is an enterprise-grade application that provides comprehensive real-time analytics, 
							performance monitoring, and data-driven insights across all store locations. The platform enables 
							data-informed decision making at every level of the organization, from individual store performance 
							to regional market analysis and strategic business planning.
						</p>
						<p>
							Built with modern technologies and enterprise-grade security, PizzaWorld+ supports 100+ store locations 
							with real-time data synchronization, sub-second query response times, and 99.9% data accuracy.
						</p>
					</div>
					
					<div class="metrics-showcase">
						<div class="metric-item">
							<span class="metric-value">Sub-100ms</span>
							<span class="metric-label">Query Response</span>
						</div>
						<div class="metric-item">
							<span class="metric-value">100+</span>
							<span class="metric-label">Store Locations</span>
						</div>
						<div class="metric-item">
							<span class="metric-value">99.9%</span>
							<span class="metric-label">Data Accuracy</span>
						</div>
						<div class="metric-item">
							<span class="metric-value">50+</span>
							<span class="metric-label">Materialized Views</span>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Work/Features Section -->
		<section id="work" class="work-section section with-background bg-variant">
			<div class="wrapper">
				<header class="section-header">
					<h2>Platform Features</h2>
					<p>Everything you need to run and grow your pizza business, powered by real-time data and advanced analytics.</p>
				</header>

				<div class="features-grid">
					<div class="feature-card">
						<h3>Real-Time Dashboard Analytics</h3>
						<ul>
							<li>Global KPIs: Revenue, orders, average order value, customer count</li>
							<li>Store performance with comparative analysis</li>
							<li>Interactive charts with time-based filtering</li>
							<li>Comprehensive export capabilities (CSV, PDF)</li>
						</ul>
					</div>

					<div class="feature-card">
						<h3>Advanced Store Management</h3>
						<ul>
							<li>Comprehensive analytics for individual locations</li>
							<li>Performance comparison and benchmarking</li>
							<li>Efficiency metrics and store ranking systems</li>
							<li>Geographic analysis and custom range comparisons</li>
						</ul>
					</div>

					<div class="feature-card">
						<h3>Product & Inventory Analytics</h3>
						<ul>
							<li>SKU-level analytics and trending analysis</li>
							<li>Category analysis and revenue tracking</li>
							<li>Top products with detailed performance metrics</li>
							<li>Inventory insights and optimization recommendations</li>
						</ul>
					</div>

					<div class="feature-card">
						<h3>Customer & Order Analytics</h3>
						<ul>
							<li>Real-time order tracking and status monitoring</li>
							<li>Customer acquisition and retention analysis</li>
							<li>Customer segmentation and behavior insights</li>
							<li>Peak hour identification and optimization</li>
							<li>Contact support with integrated email service</li>
						</ul>
					</div>

					<div class="feature-card">
						<h3>Sales & Revenue Analytics</h3>
						<ul>
							<li>Multi-dimensional revenue analysis and trends</li>
							<li>Sales performance and forecasting capabilities</li>
							<li>Profitability analysis and margin tracking</li>
							<li>Seasonal analysis and holiday impact assessment</li>
						</ul>
					</div>

					<div class="feature-card">
						<h3>Predictive Analytics</h3>
						<ul>
							<li>Machine learning-based revenue predictions</li>
							<li>Time-series analysis and trend forecasting</li>
							<li>Demand planning and customer behavior prediction</li>
							<li>Benchmarking and goal tracking systems</li>
						</ul>
					</div>
				</div>

				<!-- Technology Stack -->
				<div class="tech-section">
					<h2>Technology Stack</h2>
					<div class="tech-grid">
						<div class="tech-card">
							<h4>Backend Architecture</h4>
							<ul>
								<li>Spring Boot 3.4.6 (Java 17)</li>
								<li>Spring Security with JWT authentication</li>
								<li>PostgreSQL with Supabase cloud hosting</li>
								<li>Hibernate/JPA with HikariCP connection pooling</li>
								<li>RESTful APIs with comprehensive error handling</li>
							</ul>
						</div>

						<div class="tech-card">
							<h4>Frontend Technologies</h4>
							<ul>
								<li>Angular 19.1.0 with standalone components</li>
								<li>PrimeNG 19.1.3 & Angular Material 19.2.18</li>
								<li>Tailwind CSS 3.4.17 for utility-first styling</li>
								<li>ApexCharts, Chart.js, D3.js for visualizations</li>
								<li>RxJS for reactive state management</li>
							</ul>
						</div>

						<div class="tech-card">
							<h4>Performance & Security</h4>
							<ul>
								<li>50+ materialized views for lightning-fast analytics</li>
								<li>Multi-level caching with HikariCP connection pooling</li>
								<li>Enterprise security: JWT auth, RBAC, and CSRF protection</li>
								<li>Advanced protection: XSS/SQL injection prevention, rate limiting</li>
								<li>Production-ready: SSL/TLS, audit logging, Docker deployment</li>
							</ul>
						</div>

						<div class="tech-card">
							<h4>Business Impact</h4>
							<ul>
								<li>Real-time decision making capabilities</li>
								<li>Data-driven store and product optimization</li>
								<li>Informed staffing and inventory decisions</li>
								<li>Regional performance and market analysis</li>
								<li>Zero security incidents and 95% test coverage</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</section>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
	/* Smooth scrolling for anchor links */
	html {
		scroll-behavior: smooth;
	}

	.onepage {
		min-height: 100vh;
	}

	/* Hero Section */
	.hero-section {
		min-height: 80vh;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		padding: 1rem 0;
	}

	.hero-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 3rem;
		max-width: 1200px;
		margin: 0 auto;
	}

	.hero-logo {
		width: 200px;
		height: 200px;
		border-radius: 2rem;
		box-shadow: var(--shadow-lg);
		background: white;
		padding: 1rem;
	}

	.hero-title {
		font-size: var(--text-6xl);
		font-family: var(--font-brand);
		font-weight: 700;
		margin: 0;
		color: var(--gray-0);
	}

	.hero-title .accent {
		color: var(--accent-regular);
	}

	.hero-tagline {
		font-size: var(--text-lg);
		color: var(--gray-300);
		max-width: 60ch;
		line-height: 1.6;
		margin: 0;
	}

	.hero-badges {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		justify-content: center;
	}

	/* Action Boxes */
	.action-boxes {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		width: 100%;
		max-width: 1000px;
		margin-top: 2rem;
	}

	.action-box {
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 1.5rem;
		padding: 2rem;
		text-align: center;
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		min-height: 280px;
	}

	.action-box::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 3px;
		background: var(--accent-regular);
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.action-box:hover::before {
		opacity: 1;
	}

	.action-box.featured {
		background: linear-gradient(135deg, var(--accent-regular), var(--accent-dark));
		color: var(--gray-0);
		transform: scale(1.05);
		box-shadow: var(--shadow-lg);
		border-color: var(--accent-light);
	}

	.action-box.featured::before {
		opacity: 1;
		background: var(--gray-0);
	}

	.action-box:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-lg);
	}

	.action-box.featured:hover {
		transform: scale(1.05) translateY(-5px);
		box-shadow: var(--shadow-xl);
	}

	.action-icon {
		margin-bottom: 1rem;
		color: var(--accent-regular);
	}

	.action-box.featured .action-icon {
		color: var(--gray-0);
	}

	.action-box h3 {
		font-size: var(--text-xl);
		font-weight: 600;
		margin-bottom: 1rem;
		color: var(--gray-0);
	}

	.action-box p {
		color: var(--gray-300);
		margin-bottom: 1.5rem;
		line-height: 1.5;
	}

	.action-box.featured p {
		color: var(--gray-100);
	}

	.action-links {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		margin-top: auto;
	}

	.action-link {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		padding: 1rem 1rem;
		border-radius: 0.75rem;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.2s ease;
		font-size: var(--text-sm);
		min-height: 48px;
		box-sizing: border-box;
		text-align: center;
		flex: 1;
		width: 100%;
	}

	.action-link.primary {
		background: var(--accent-regular);
		color: var(--gray-0);
		flex: 1;
		width: 100%;
	}

	.action-link.primary:hover {
		background: var(--accent-dark);
		transform: translateY(-2px);
	}

	.action-box.featured .action-link.primary {
		background: var(--gray-0);
		color: var(--accent-regular);
		flex: 1;
		width: 100%;
	}

	.action-box.featured .action-link.primary:hover {
		background: var(--gray-100);
	}

	.action-link.secondary {
		background: var(--gray-800);
		color: var(--gray-300);
		border: 1px solid var(--gray-700);
		flex: 1;
		width: 100%;
	}

	.action-link.secondary:hover {
		background: var(--gray-700);
		color: var(--gray-0);
		transform: translateY(-2px);
	}

	/* Section Styles */
	.section {
		padding: 5rem 0;
		position: relative;
	}

	.with-background {
		position: relative;
	}

	.with-background::before {
		--hero-bg: var(--bg-image-subtle-2);
		content: '';
		position: absolute;
		pointer-events: none;
		left: 50%;
		width: 100vw;
		aspect-ratio: calc(2.25 / var(--bg-scale));
		top: 0;
		transform: translateY(-75%) translateX(-50%);
		background:
			url('/assets/backgrounds/noise.png') top center/220px repeat,
			var(--hero-bg) center center / var(--bg-gradient-size) no-repeat,
			var(--gray-999);
		background-blend-mode: overlay, normal, normal, normal;
		mix-blend-mode: var(--bg-blend-mode);
		z-index: -1;
	}

	.with-background.bg-variant::before {
		--hero-bg: var(--bg-image-subtle-1);
	}

	.section-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.section-header h2 {
		font-size: var(--text-4xl);
		color: var(--gray-0);
		margin-bottom: 1rem;
	}

	.section-header p {
		font-size: var(--text-lg);
		color: var(--gray-300);
		max-width: 60ch;
		margin: 0 auto;
	}

	/* About Section */
	.about-content {
		display: grid;
		gap: 3rem;
		align-items: center;
	}

	.about-text p {
		font-size: var(--text-lg);
		color: var(--gray-300);
		line-height: 1.6;
		margin-bottom: 1.5rem;
	}

	.metrics-showcase {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
		gap: 1.5rem;
	}

	.metric-item {
		text-align: center;
		padding: 2rem 1rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 1rem;
		box-shadow: var(--shadow-sm);
	}

	.metric-value {
		display: block;
		font-size: var(--text-3xl);
		font-weight: 700;
		color: var(--accent-regular);
		margin-bottom: 0.5rem;
	}

	.metric-label {
		font-size: var(--text-sm);
		color: var(--gray-400);
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	/* Features Grid */
	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-bottom: 4rem;
	}

	.feature-card {
		padding: 2rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 1rem;
		box-shadow: var(--shadow-sm);
	}

	.feature-card h3 {
		color: var(--accent-regular);
		font-size: var(--text-xl);
		margin-bottom: 1rem;
	}

	.feature-card ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.feature-card li {
		color: var(--gray-300);
		padding: 0.5rem 0;
		border-bottom: 1px solid var(--gray-800);
	}

	.feature-card li:last-child {
		border-bottom: none;
	}

	/* Technology Section */
	.tech-section {
		margin-top: 5rem;
		padding-top: 3rem;
		border-top: 1px solid var(--gray-800);
	}

	.tech-section h2 {
		text-align: center;
		font-size: var(--text-3xl);
		color: var(--gray-0);
		margin-bottom: 3rem;
	}

	.tech-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
	}

	.tech-card {
		padding: 2rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 1rem;
		box-shadow: var(--shadow-sm);
	}

	.tech-card h4 {
		color: var(--accent-regular);
		font-size: var(--text-lg);
		margin-bottom: 1rem;
	}

	.tech-card ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.tech-card li {
		color: var(--gray-300);
		padding: 0.25rem 0;
		font-size: var(--text-sm);
	}

	/* Responsive adjustments */
	@media (min-width: 50em) {
		.hero-logo {
			width: 250px;
			height: 250px;
		}

		.hero-title {
			font-size: var(--text-7xl);
		}

		.about-content {
			grid-template-columns: 1fr 1fr;
			gap: 4rem;
		}

		.metrics-showcase {
			grid-template-columns: repeat(2, 1fr);
		}

		.action-boxes {
			grid-template-columns: repeat(3, 1fr);
		}

		.action-links {
			flex-direction: row;
			gap: 0.5rem;
		}

		.action-link {
			flex: 1;
			padding: 0.875rem 0.5rem;
			font-size: 0.85rem;
		}
	}

	@media (min-width: 768px) {
		.features-grid {
			grid-template-columns: repeat(2, 1fr);
		}

		.tech-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}
</style>