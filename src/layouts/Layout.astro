---
import '../styles/global.css';

export interface Props {
	title: string;
	description?: string;
}

const { title, description = "PizzaWorld+ - The Ultimate Pizza Management Dashboard" } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="pizzaworld">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		
		<!-- Open Graph / Twitter Card -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
	</head>
	<body class="min-h-screen bg-base-100 dark:bg-slate-900 transition-colors">
		<header class="w-full flex items-center gap-4 px-6 py-4 bg-white/80 dark:bg-slate-800/80 shadow-sm sticky top-0 z-50 transition-colors">
			<img src="/assets/logo.png" alt="PizzaWorld+ Logo" class="h-10 w-10 rounded-full shadow" />
			<h1 class="text-2xl font-extrabold tracking-tight text-slate-800 dark:text-white select-none">
				PizzaWorld<span class="text-orange-500 dark:text-orange-400">+</span>
			</h1>
		</header>
		<slot />
	</body>
</html>
