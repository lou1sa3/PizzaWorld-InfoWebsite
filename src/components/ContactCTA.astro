---
import CallToAction from './CallToAction.astro';
import Icon from './Icon.astro';
---

<aside id="contact">
	<div class="contact-container">
		<div class="contact-header">
			<h2>Ready to Transform Your Pizza Business?</h2>
			<p>Get in touch to learn how PizzaWorld+ can drive data-informed decision making across your entire chain.</p>
		</div>

		<div class="contact-grid">
			<div class="contact-card">
				<div class="contact-icon">
					<Icon icon="paper-plane-tilt" size="2rem" />
				</div>
				<div class="contact-content">
					<h3>Get Started</h3>
					<p>Ready to implement PizzaWorld+ in your business?</p>
				</div>
				<div class="contact-action">
					<CallToAction href="mailto:pizzaworldplus@gmail.com">
						Start Your Journey
						<Icon icon="arrow-right" size="1.2em" />
					</CallToAction>
				</div>
			</div>

			<div class="contact-card">
				<div class="contact-icon">
					<Icon icon="mail" size="2rem" />
				</div>
				<div class="contact-content">
					<h3>Contact Support</h3>
					<p>Need help or have questions about our platform?</p>
				</div>
				<div class="contact-action">
					<div class="contact-links">
						<a href="mailto:pizzaworldplus@gmail.com" class="contact-link primary">
							<Icon icon="mail" size="1.1rem" />
							<span>Email Support</span>
						</a>
						<a href="https://github.com/luigids03/PizzaWorld/issues" class="contact-link secondary" target="_blank" rel="noopener noreferrer">
							<Icon icon="github-logo" size="1.1rem" />
							<span>Report Issue</span>
						</a>
					</div>
				</div>
			</div>

			<div class="contact-card">
				<div class="contact-icon">
					<Icon icon="heart" size="2rem" />
				</div>
				<div class="contact-content">
					<h3>Follow Our Journey</h3>
					<p>Stay updated with the latest features and improvements.</p>
				</div>
				<div class="contact-action">
					<div class="contact-links">
						<a href="/blog" class="contact-link primary">
							<Icon icon="paper-plane-tilt" size="1.1rem" />
							<span>Read Our Blog</span>
						</a>
						<a href="https://github.com/luigids03/PizzaWorld/" class="contact-link secondary" target="_blank" rel="noopener noreferrer">
							<Icon icon="github-logo" size="1.1rem" />
							<span>GitHub Repo</span>
						</a>
					</div>
				</div>
			</div>
		</div>

		<div class="contact-footer">
			<p>
				<strong>PizzaWorld+</strong> - Enterprise Analytics Platform
			</p>
			<p>
				Built with <Icon icon="heart" size="1.1em" color="var(--accent-regular)" /> for the pizza industry • 
				<a href="/documentation">Documentation</a> • 
				<a href="https://github.com/luigids03/PizzaWorld/" target="_blank" rel="noopener noreferrer">Open Source</a>
			</p>
		</div>
	</div>
</aside>

<style>
	aside {
		background: linear-gradient(135deg, var(--gray-999), var(--gray-900));
		border-top: 1px solid var(--gray-800);
		border-bottom: 1px solid var(--gray-800);
		position: relative;
		overflow: hidden;
	}

	aside::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('/assets/backgrounds/noise.png') repeat;
		opacity: 0.05;
		z-index: 1;
	}

	.contact-container {
		position: relative;
		z-index: 2;
		padding: 5rem 1.5rem;
		max-width: 1200px;
		margin: 0 auto;
	}

	.contact-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.contact-header h2 {
		font-size: var(--text-3xl);
		color: var(--gray-0);
		margin-bottom: 1rem;
		font-weight: 700;
	}

	.contact-header p {
		font-size: var(--text-lg);
		color: var(--gray-300);
		max-width: 60ch;
		margin: 0 auto;
		line-height: 1.6;
	}

	.contact-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
		margin-bottom: 3rem;
	}

	.contact-card {
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 1.5rem;
		padding: 2rem;
		text-align: center;
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
		display: flex;
		flex-direction: column;
		min-height: 280px;
	}

	.contact-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 3px;
		background: var(--accent-regular);
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.contact-card:hover::before {
		opacity: 1;
	}

	.contact-card:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-lg);
	}

	.contact-icon {
		margin-bottom: 1.5rem;
		color: var(--accent-regular);
		flex-shrink: 0;
	}

	.contact-content {
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
		margin-bottom: 2rem;
	}

	.contact-card h3 {
		font-size: var(--text-xl);
		color: var(--gray-0);
		margin-bottom: 1rem;
		font-weight: 600;
	}

	.contact-card p {
		color: var(--gray-300);
		line-height: 1.5;
		margin: 0;
	}

	.contact-action {
		flex-shrink: 0;
		margin-top: auto;
	}

	.contact-links {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		width: 100%;
	}

	.contact-link {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		padding: 1rem 1.25rem;
		text-decoration: none;
		border-radius: 0.75rem;
		transition: all 0.2s ease;
		font-size: var(--text-sm);
		font-weight: 500;
		min-height: 54px;
		box-sizing: border-box;
		line-height: 1.3;
	}

	.contact-link span {
		text-align: center;
		flex: 1;
		line-height: 1.3;
	}

	.contact-link.primary {
		background: var(--accent-regular);
		color: var(--gray-0);
		border: 1px solid var(--accent-regular);
	}

	.contact-link.primary:hover {
		background: var(--accent-dark);
		border-color: var(--accent-dark);
		transform: translateY(-2px);
	}

	.contact-link.secondary {
		background: var(--gray-800);
		color: var(--gray-300);
		border: 1px solid var(--gray-700);
	}

	.contact-link.secondary:hover {
		background: var(--gray-700);
		color: var(--gray-0);
		border-color: var(--gray-600);
		transform: translateY(-2px);
	}

	.contact-footer {
		text-align: center;
		padding-top: 2rem;
		border-top: 1px solid var(--gray-800);
		color: var(--gray-400);
	}

	.contact-footer p {
		margin-bottom: 0.5rem;
		font-size: var(--text-sm);
	}

	.contact-footer a {
		color: var(--accent-regular);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.contact-footer a:hover {
		color: var(--accent-light);
	}

	/* Tablet styles */
	@media (min-width: 768px) {
		.contact-container {
			padding: 6rem 2rem;
		}

		.contact-grid {
			grid-template-columns: repeat(2, 1fr);
		}

		.contact-card:last-child {
			grid-column: 1 / -1;
			max-width: 600px;
			margin: 0 auto;
		}

		.contact-links {
			flex-direction: row;
			gap: 1rem;
		}

		.contact-link {
			flex: 1;
			padding: 1rem 1rem;
			min-height: 54px;
		}
	}

	/* Desktop styles */
	@media (min-width: 1024px) {
		.contact-container {
			padding: 7rem 2rem;
		}

		.contact-header h2 {
			font-size: var(--text-4xl);
		}

		.contact-grid {
			grid-template-columns: repeat(3, 1fr);
		}

		.contact-card {
			min-height: 320px;
		}

		.contact-card:last-child {
			grid-column: unset;
			max-width: unset;
			margin: unset;
		}

		.contact-links {
			flex-direction: column;
			gap: 1rem;
		}

		.contact-link {
			flex: unset;
			padding: 1rem 1.25rem;
			min-height: 54px;
		}
	}

	/* Large desktop styles */
	@media (min-width: 1200px) {
		.contact-links {
			flex-direction: row;
			gap: 1rem;
		}

		.contact-link {
			flex: 1;
			padding: 1rem 1rem;
			font-size: var(--text-sm);
			min-height: 54px;
		}
	}
</style>
