---
export interface Props {
	text: string;
	href: string;
	variant?: 'primary' | 'secondary' | 'accent';
	size?: 'sm' | 'md' | 'lg';
	external?: boolean;
}

const { text, href, variant = 'primary', size = 'md', external = false } = Astro.props;

const variantClasses = {
	primary: 'btn-primary',
	secondary: 'btn-secondary',
	accent: 'btn-accent'
};

const sizeClasses = {
	sm: 'btn-sm',
	md: 'btn',
	lg: 'btn-lg'
};

const classes = `btn ${variantClasses[variant]} ${sizeClasses[size]}`;
---

<a href={href} class={classes} target={external ? '_blank' : undefined} rel={external ? 'noopener noreferrer' : undefined}>
	{text}
	{external && <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
		<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
	</svg>}
</a> 